<nav class="pagination clearfix" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span>&lsaquo;</span> Newer Posts</a>
    {{/if}}
    <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older Posts <span>&rsaquo;</span></a>
    {{/if}}
</nav>